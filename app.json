{
	"scripts": {
    "postdeploy": "sh heroku-post-deploy.sh"
	},
	"env": {
    "HEROKU_APP_NAME": {
        "required": true
    }
  },
  "addons": [
    "openredis",
    {
      "plan": "mongolab:shared-single-small",
      "as": "MONGO"
    },
    {
      "plan": "heroku-postgresql",
      "options": {
        "version": "9.5"
      }
    }
  ]
}
